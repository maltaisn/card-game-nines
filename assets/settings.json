{
  name: "com.maltaisn.nines.settings"
  prefs: {
    interface_category: {
      type: "category"
      title: "@string/pref_catg_interface"
      icon: "icon-list"
      prefs: {
        language: {
          type: "list"
          title: "@string/pref_language"
          entries: {
            auto: "@string/pref_language_auto"
            en: "English"
            fr: "Fran√ßais"
          }
          defaultValue: "auto"
        }
        enable_sound: {
          type: "switch"
          title: "@string/pref_enable_sound"
          defaultValue: true
        }
        player_names: {
          type: "player-names"
          title: "@string/pref_player_names"
          inputTitle: "@string/pref_player_names_input"
          maxLength: 15
          defaultValue: [
            "@string/pref_player_names_south",
            "@string/pref_player_names_west",
            "@string/pref_player_names_north"
          ]
        }
        game_speed: {
          type: "list"
          title: "@string/pref_game_speed"
          entries: {
            slow: "@string/pref_game_speed_slow"
            normal: "@string/pref_game_speed_normal"
            fast: "@string/pref_game_speed_fast"
            very_fast: "@string/pref_game_speed_very_fast"
          }
          defaultValue: "normal"
        }
        card_deal_animation: {
          type: "switch"
          title: "@string/pref_card_deal_animation"
          defaultValue: false
        }
        auto_play: {
          type: "switch"
          title: "@string/pref_auto_play"
          help: "@string/pref_auto_play_help"
          defaultValue: false
        }
        auto_collect: {
          type: "switch"
          title: "@string/pref_auto_collect"
          shortTitle: "@string/pref_auto_collect_short"
          help: "@string/pref_auto_collect_help"
          defaultValue: true
        }
        select_playable: {
          type: "switch"
          title: "@string/pref_select_playable"
          shortTitle: "@string/pref_select_playable_short"
          help: "@string/pref_select_playable_help"
          defaultValue: true
        }
        display_score: {
          type: "switch"
          title: "@string/pref_display_score"
          defaultValue: true
        }
        reorder_hand: {
          type: "switch"
          title: "@string/pref_reorder_hand"
          shortTitle: "@string/pref_reorder_hand_short"
          help: "@string/pref_reorder_hand_help"
          defaultValue: true
        }
      }
    }
    game_category: {
      type: "category"
      title: "@string/pref_catg_game"
      icon: "icon-cards"
      prefs: {
        start_score: {
          type: "slider"
          title: "@string/pref_start_score"
          minValue: 4
          maxValue: 30
          defaultValue: 9
          confirmChanges: true
        }
      }
    }
  }
}
